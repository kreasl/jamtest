{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Users</h1>


        {% if users|length > 0 %}
            <ul>
                {% for user in users %}
                    <li>{{ user.name }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>No users added</p>
        {% endif %}
    </div>
{% endblock %}
